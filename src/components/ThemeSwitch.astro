<button
  id="themeToggle"
  class="flex flex-row bg-theme-800 border-theme-700 rounded-xl hover:border-theme-200 border-r border-t border-b border-l p-1 mx-2"
>
  <svg
    class="w-3 h-3 fill-theme-400 bg-theme-900 stroke-theme-text1 stroke-2 sun rounded-lg"
    xmlns="http://www.w3.org/2000/svg"
    id="sun"
    viewBox="0 0 24 24"
  >
    <circle cy="12" cx="12" r="4"></circle>
    <path
      class="sun"
      stroke-width="2"
      d="M12 2v2M12 20v2M4.93 4.93l1.41 1.41M17.66 17.66l1.41 1.41M2 12h2M20 12h2M6.34 17.66l-1.41 1.41M19.07 4.93l-1.41 1.41"
    ></path>
  </svg>
  <svg
    class="w-3 h-3 fill-theme-400 bg-theme-900 rounded-lg moon"
    id="moon"
    viewBox="0 0 24 24"
  >
    <path
      class="moon"
      fill-rule="evenodd"
      d="M12 3a6 6 0 0 0 9 9 9 9 0 1 1-9-9Z"></path>
  </svg>
</button>

<style>
  :global(.theme-dark) .sun {
    stroke: transparent;
    fill: transparent;
    background: transparent;
  }
  :global(.theme-light) .moon {
    stroke: transparent;
    fill: transparent;
    background: transparent;
  }
</style>

<script is:inline>
  const theme = (() => {
    if (typeof localStorage !== "undefined" && localStorage.getItem("theme")) {
      return localStorage.getItem("theme");
    }
    if (window.matchMedia("(prefers-color-scheme: dark)").matches) {
      return "dark";
    }
    return "light";
  })();
  if (theme === "light") {
    document.documentElement.classList.remove("theme-dark");
    document.documentElement.classList.add("theme-light");
  } else {
    document.documentElement.classList.add("theme-dark");
  }
  const handleToggleClick = () => {
    const element = document.documentElement;
    element.classList.toggle("theme-dark");
    element.classList.toggle("theme-light");
    const isDark = element.classList.contains("theme-dark");
    localStorage.setItem("theme", isDark ? "dark" : "light");
  };

  document
    .getElementById("themeToggle")
    .addEventListener("click", handleToggleClick);
</script>
